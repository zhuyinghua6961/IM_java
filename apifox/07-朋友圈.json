{
  "openapi": "3.0.0",
  "info": {
    "title": "朋友圈模块 API",
    "description": "动态发布、点赞、评论（❌ 未实现）",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "http://localhost:8084",
      "description": "朋友圈服务 - 本地开发环境"
    }
  ],
  "tags": [
    {
      "name": "朋友圈",
      "description": "朋友圈相关接口"
    }
  ],
  "paths": {
    "/api/moments/publish": {
      "post": {
        "tags": ["朋友圈"],
        "summary": "❌ 发布动态（未实现）",
        "description": "发布新的朋友圈动态",
        "security": [{"BearerAuth": []}],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "content": {"type": "string", "example": "今天天气真好"},
                  "images": {
                    "type": "array",
                    "items": {"type": "string"},
                    "example": ["https://xxx.com/image1.jpg", "https://xxx.com/image2.jpg"]
                  },
                  "video": {"type": "string", "nullable": true},
                  "location": {"type": "string", "example": "北京市朝阳区"},
                  "visibleType": {
                    "type": "integer",
                    "description": "0-公开 1-私密 2-部分可见",
                    "example": 0
                  },
                  "visibleUsers": {
                    "type": "array",
                    "items": {"type": "integer"},
                    "example": []
                  }
                }
              },
              "examples": {
                "发布图文": {
                  "value": {
                    "content": "今天天气真好",
                    "images": ["https://xxx.com/image1.jpg"],
                    "location": "北京市朝阳区",
                    "visibleType": 0
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "发布成功",
            "content": {
              "application/json": {
                "example": {
                  "code": 200,
                  "data": {
                    "momentsId": 1,
                    "createTime": "2024-01-01 12:00:00"
                  }
                }
              }
            }
          }
        }
      }
    },
    "/api/moments/list": {
      "get": {
        "tags": ["朋友圈"],
        "summary": "❌ 获取动态列表（未实现）",
        "description": "获取朋友圈动态列表",
        "security": [{"BearerAuth": []}],
        "parameters": [
          {
            "name": "page",
            "in": "query",
            "schema": {"type": "integer", "default": 1}
          },
          {
            "name": "size",
            "in": "query",
            "schema": {"type": "integer", "default": 20}
          }
        ],
        "responses": {
          "200": {
            "description": "查询成功",
            "content": {
              "application/json": {
                "example": {
                  "code": 200,
                  "data": {
                    "total": 100,
                    "list": [
                      {
                        "momentsId": 1,
                        "userId": 1,
                        "userName": "张三",
                        "userAvatar": "https://xxx.com/avatar.jpg",
                        "content": "今天天气真好",
                        "images": ["https://xxx.com/image1.jpg"],
                        "likeCount": 10,
                        "commentCount": 5,
                        "liked": false,
                        "createTime": "2024-01-01 12:00:00"
                      }
                    ]
                  }
                }
              }
            }
          }
        }
      }
    },
    "/api/moments/{momentsId}": {
      "get": {
        "tags": ["朋友圈"],
        "summary": "❌ 获取动态详情（未实现）",
        "description": "获取指定动态的详细信息",
        "security": [{"BearerAuth": []}],
        "parameters": [
          {
            "name": "momentsId",
            "in": "path",
            "required": true,
            "schema": {"type": "integer"},
            "example": 1
          }
        ],
        "responses": {
          "200": {
            "description": "查询成功"
          }
        }
      },
      "delete": {
        "tags": ["朋友圈"],
        "summary": "❌ 删除动态（未实现）",
        "description": "删除指定动态",
        "security": [{"BearerAuth": []}],
        "parameters": [
          {
            "name": "momentsId",
            "in": "path",
            "required": true,
            "schema": {"type": "integer"},
            "example": 1
          }
        ],
        "responses": {
          "200": {
            "description": "删除成功"
          }
        }
      }
    },
    "/api/moments/{momentsId}/like": {
      "post": {
        "tags": ["朋友圈"],
        "summary": "❌ 点赞动态（未实现）",
        "description": "点赞指定动态",
        "security": [{"BearerAuth": []}],
        "parameters": [
          {
            "name": "momentsId",
            "in": "path",
            "required": true,
            "schema": {"type": "integer"},
            "example": 1
          }
        ],
        "responses": {
          "200": {
            "description": "点赞成功"
          }
        }
      },
      "delete": {
        "tags": ["朋友圈"],
        "summary": "❌ 取消点赞（未实现）",
        "description": "取消点赞指定动态",
        "security": [{"BearerAuth": []}],
        "parameters": [
          {
            "name": "momentsId",
            "in": "path",
            "required": true,
            "schema": {"type": "integer"},
            "example": 1
          }
        ],
        "responses": {
          "200": {
            "description": "取消成功"
          }
        }
      }
    },
    "/api/moments/{momentsId}/comment": {
      "post": {
        "tags": ["朋友圈"],
        "summary": "❌ 评论动态（未实现）",
        "description": "评论指定动态",
        "security": [{"BearerAuth": []}],
        "parameters": [
          {
            "name": "momentsId",
            "in": "path",
            "required": true,
            "schema": {"type": "integer"},
            "example": 1
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": ["content"],
                "properties": {
                  "content": {"type": "string", "example": "真不错"},
                  "replyToId": {"type": "integer", "nullable": true, "example": null}
                }
              },
              "examples": {
                "评论动态": {
                  "value": {"content": "真不错", "replyToId": null}
                },
                "回复评论": {
                  "value": {"content": "我也这么觉得", "replyToId": 1}
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "评论成功",
            "content": {
              "application/json": {
                "example": {
                  "code": 200,
                  "data": {
                    "commentId": 1,
                    "createTime": "2024-01-01 12:05:00"
                  }
                }
              }
            }
          }
        }
      }
    },
    "/api/moments/comment/{commentId}": {
      "delete": {
        "tags": ["朋友圈"],
        "summary": "❌ 删除评论（未实现）",
        "description": "删除指定评论",
        "security": [{"BearerAuth": []}],
        "parameters": [
          {
            "name": "commentId",
            "in": "path",
            "required": true,
            "schema": {"type": "integer"},
            "example": 1
          }
        ],
        "responses": {
          "200": {
            "description": "删除成功"
          }
        }
      }
    }
  },
  "components": {
    "securitySchemes": {
      "BearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    }
  }
