{
  "openapi": "3.0.0",
  "info": {
    "title": "用户管理模块 API",
    "description": "用户注册、登录、信息管理（✅ 已实现）",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "http://localhost:8081",
      "description": "本地开发环境"
    }
  ],
  "tags": [
    {
      "name": "用户管理",
      "description": "用户相关接口"
    }
  ],
  "paths": {
    "/api/user/register": {
      "post": {
        "tags": ["用户管理"],
        "summary": "✅ 用户注册",
        "description": "创建新用户账号",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": ["username", "password", "nickname"],
                "properties": {
                  "username": {"type": "string", "example": "testuser001"},
                  "password": {"type": "string", "example": "123456"},
                  "nickname": {"type": "string", "example": "测试用户"},
                  "phone": {"type": "string", "example": "13800138001"},
                  "email": {"type": "string", "example": "test@example.com"}
                }
              },
              "examples": {
                "正常注册": {
                  "value": {
                    "username": "testuser001",
                    "password": "123456",
                    "nickname": "测试用户",
                    "phone": "13800138001",
                    "email": "test@example.com"
                  }
                },
                "最小必填": {
                  "value": {
                    "username": "testuser002",
                    "password": "123456",
                    "nickname": "测试用户2"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "注册成功",
            "content": {
              "application/json": {
                "examples": {
                  "成功": {
                    "value": {
                      "code": 200,
                      "message": "success",
                      "data": {
                        "userId": 1,
                        "username": "testuser001",
                        "nickname": "测试用户",
                        "avatar": "https://cube.elemecdn.com/0/88/03b0d39583f48206768a7534e55bcpng.png"
                      }
                    }
                  },
                  "用户名已存在": {
                    "value": {
                      "code": 1001,
                      "message": "用户名已存在"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/api/user/login": {
      "post": {
        "tags": ["用户管理"],
        "summary": "✅ 用户登录",
        "description": "用户账号密码登录",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": ["username", "password"],
                "properties": {
                  "username": {"type": "string", "example": "testuser001"},
                  "password": {"type": "string", "example": "123456"}
                }
              },
              "examples": {
                "正常登录": {
                  "value": {"username": "testuser001", "password": "123456"}
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "登录成功",
            "content": {
              "application/json": {
                "examples": {
                  "成功": {
                    "value": {
                      "code": 200,
                      "message": "success",
                      "data": {
                        "token": "eyJhbGciOiJIUzI1NiJ9.eyJ1c2VySWQiOjF9.xxx",
                        "userInfo": {
                          "userId": 1,
                          "username": "testuser001",
                          "nickname": "测试用户",
                          "avatar": "https://example.com/avatar.jpg"
                        }
                      }
                    }
                  },
                  "密码错误": {
                    "value": {
                      "code": 1003,
                      "message": "用户名或密码错误"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/api/user/info/{userId}": {
      "get": {
        "tags": ["用户管理"],
        "summary": "✅ 获取用户信息",
        "description": "根据用户ID获取用户详细信息",
        "security": [{"BearerAuth": []}],
        "parameters": [
          {
            "name": "userId",
            "in": "path",
            "required": true,
            "schema": {"type": "integer"},
            "example": 1
          }
        ],
        "responses": {
          "200": {
            "description": "查询成功",
            "content": {
              "application/json": {
                "example": {
                  "code": 200,
                  "message": "success",
                  "data": {
                    "userId": 1,
                    "username": "testuser001",
                    "nickname": "测试用户",
                    "avatar": "https://example.com/avatar.jpg",
                    "gender": 0,
                    "phone": "13800138001",
                    "email": "test@example.com",
                    "signature": "个性签名"
                  }
                }
              }
            }
          }
        }
      }
    },
    "/api/user/info": {
      "put": {
        "tags": ["用户管理"],
        "summary": "✅ 更新用户信息",
        "description": "更新当前用户的个人信息",
        "security": [{"BearerAuth": []}],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "nickname": {"type": "string", "example": "新昵称"},
                  "avatar": {"type": "string", "example": "https://example.com/new-avatar.jpg"},
                  "gender": {"type": "integer", "example": 1},
                  "signature": {"type": "string", "example": "新的个性签名"}
                }
              },
              "examples": {
                "更新昵称和签名": {
                  "value": {
                    "nickname": "新昵称",
                    "signature": "这是我的新签名"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "更新成功",
            "content": {
              "application/json": {
                "example": {
                  "code": 200,
                  "message": "success"
                }
              }
            }
          }
        }
      }
    },
    "/api/user/search": {
      "get": {
        "tags": ["用户管理"],
        "summary": "❌ 搜索用户（未实现）",
        "description": "根据关键词搜索用户",
        "security": [{"BearerAuth": []}],
        "parameters": [
          {
            "name": "keyword",
            "in": "query",
            "required": true,
            "schema": {"type": "string"},
            "example": "张三"
          },
          {
            "name": "page",
            "in": "query",
            "schema": {"type": "integer", "default": 1}
          },
          {
            "name": "size",
            "in": "query",
            "schema": {"type": "integer", "default": 20}
          }
        ],
        "responses": {
          "200": {
            "description": "查询成功",
            "content": {
              "application/json": {
                "example": {
                  "code": 200,
                  "data": {
                    "total": 10,
                    "list": [
                      {
                        "userId": 2,
                        "username": "user002",
                        "nickname": "张三",
                        "avatar": "https://example.com/avatar.jpg"
                      }
                    ]
                  }
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "securitySchemes": {
      "BearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    }
  }
}
