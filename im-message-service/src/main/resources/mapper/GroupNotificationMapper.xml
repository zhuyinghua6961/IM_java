<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.im.message.mapper.GroupNotificationMapper">

    <resultMap id="BaseResultMap" type="com.im.message.entity.GroupNotification">
        <id column="id" property="id"/>
        <result column="user_id" property="userId"/>
        <result column="group_id" property="groupId"/>
        <result column="type" property="type"/>
        <result column="message" property="message"/>
        <result column="extra" property="extra"/>
        <result column="read" property="read"/>
        <result column="create_time" property="createTime"/>
    </resultMap>

    <sql id="Base_Column_List">
        id, user_id, group_id, type, message, extra, `read`, create_time
    </sql>

    <!-- 插入群通知 -->
    <insert id="insert" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO group_notification (user_id, group_id, type, message, extra, `read`)
        VALUES (#{userId}, #{groupId}, #{type}, #{message}, #{extra}, #{read})
    </insert>

    <!-- 按用户查询群通知历史（按时间倒序） -->
    <select id="selectByUserId" resultMap="BaseResultMap">
        SELECT <include refid="Base_Column_List"/>
        FROM group_notification
        WHERE user_id = #{userId}
        ORDER BY create_time DESC
        LIMIT #{offset}, #{limit}
    </select>

    <!-- 统计用户的群通知数量 -->
    <select id="countByUserId" resultType="int">
        SELECT COUNT(1)
        FROM group_notification
        WHERE user_id = #{userId}
    </select>

    <!-- 将用户的所有群通知标记为已读 -->
    <update id="markAllReadByUserId">
        UPDATE group_notification
        SET `read` = 1
        WHERE user_id = #{userId}
          AND `read` = 0
    </update>

</mapper>
