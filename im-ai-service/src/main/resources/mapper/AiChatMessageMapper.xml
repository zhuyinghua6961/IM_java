<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.im.ai.mapper.AiChatMessageMapper">

    <resultMap id="BaseResultMap" type="com.im.ai.entity.AiChatMessage">
        <id property="id" column="id"/>
        <result property="conversationId" column="conversation_id"/>
        <result property="userId" column="user_id"/>
        <result property="role" column="role"/>
        <result property="content" column="content"/>
        <result property="createTime" column="create_time"/>
    </resultMap>

    <!-- 插入消息 -->
    <insert id="insert" parameterType="com.im.ai.entity.AiChatMessage" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO ai_chat_message (conversation_id, user_id, role, content, create_time)
        VALUES (#{conversationId}, #{userId}, #{role}, #{content}, NOW())
    </insert>

    <!-- 查询会话的消息列表 -->
    <select id="selectByConversationId" resultMap="BaseResultMap">
        SELECT id, conversation_id, user_id, role, content, create_time
        FROM ai_chat_message
        WHERE conversation_id = #{conversationId}
        ORDER BY create_time ASC
    </select>

    <!-- 统计会话消息数量 -->
    <select id="countByConversationId" resultType="int">
        SELECT COUNT(*) FROM ai_chat_message WHERE conversation_id = #{conversationId}
    </select>

</mapper>
